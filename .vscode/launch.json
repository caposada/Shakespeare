    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server (Node/Express server)",
            "command": "npm run start:dev",
            "request": "launch",
            "type": "node-terminal",
            "webRoot": "${workspaceFolder}/server",
            "cwd": "${workspaceFolder}/server"
        },

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server\\src\\services\\search-service.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}